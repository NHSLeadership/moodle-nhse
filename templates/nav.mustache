{{!
    @template theme_nhse/nav

    This template renders the top nav.
}}
<div class="nhsuk-navigation-container">

    <nav class="nhsuk-navigation" id="header-navigation" role="navigation" aria-label="Primary navigation">
        <ul class="nhsuk-header__navigation-list"
            id="moremenu{{#moremenuid}}-{{moremenuid}}{{/moremenuid}}-{{#navbarstyle}}{{navbarstyle}}{{/navbarstyle}}{{^navbarstyle}}default{{/navbarstyle}}"
            role="{{#istablist}}tablist{{/istablist}}{{^istablist}}menubar{{/istablist}}">

            {{#primarymoremenu}}
                {{#nodecollection}}
                    {{#children}}
                        {{> core/moremenu_children}}
                    {{/children}}
                {{/nodecollection}}
                {{#nodearray}}
                    {{> core/moremenu_children}}
                {{/nodearray}}
                <li class="nhsuk-header__navigation-item nav-item dropdown dropdownmoremenu d-none {{#isactive}}nhsuk-header__navigation-item__item--current{{/isactive}}" role="none" data-region="morebutton">
                    <a class="nhsuk-header__navigation-link dropdown-toggle nav-link " href="#" id="moremenu-dropdown{{#moremenuid}}-{{moremenuid}}{{/moremenuid}}" role="{{#istablist}}tab{{/istablist}}{{^istablist}}menuitem{{/istablist}}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" tabindex="-1">
                        {{#str}}moremenu, core{{/str}}
                    </a>
                </li>
            {{/primarymoremenu}}

            {{^primarymoremenu}}
                <li data-key="home" class="nhsuk-header__navigation-item nav-item" role="none" data-forceintomoremenu="false">
                    <a class="nhsuk-header__navigation-link nav-link" href="{{home_url}}" role="menuitem" tabindex="-1">
                        Home
                    </a>
                </li>
            {{/primarymoremenu}}

            <li class="nhsuk-mobile-menu-container">
                <button class="nhsuk-header__menu-toggle nhsuk-header__navigation-link" id="toggle-menu" aria-expanded="false">
                    <span class="nhsuk-u-visually-hidden">Browse </span>More
                </button>
                <ul class="nhsuk-header__drop-down nhsuk-header__drop-down--hidden"></ul>
            </li>

        </ul>
    </nav>

</div>
