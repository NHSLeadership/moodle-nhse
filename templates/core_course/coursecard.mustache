{{!
    @template course_course/coursecard

    This template renders the a card for the course cards.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10,
                "visible": true
            }
        ]
    }
}}
<div class="nhsuk-card nhsuk-card--clickable card dashboard-card mx-1"
     data-region="course-content"
     data-course-id="{{{id}}}">

    {{#courseimage}}
    <img class="nhsuk-card__img" src="{{courseimage}}" alt="{{image.alt}}">
    {{/courseimage}}

    <div class="nhsuk-card__content nhsuk-u-padding-3" id="course-info-container-{{id}}-{{uniqid}}">
        <h2 class="nhsuk-card__heading nhsuk-heading-xs">
            {{#showshortname}}
                <div class="text-muted muted d-flex mb-1 flex-wrap">
                    <span class="sr-only">
                        {{#str}}aria:courseshortname, core_course{{/str}}
                    </span>
                    {{{shortname}}}
                </div>
            {{/showshortname}}

            <a href="{{viewurl}}" class="aalink coursename mr-2 mb-1">
                {{> core_course/favouriteicon }}
                <span class="sr-only">
                    {{#str}}aria:coursename, core_course{{/str}}
                </span>
                {{$coursename}}{{/coursename}}
            </a>
        </h2>

        <p class="course-summary nhsuk-card__description">
            <a href="{{viewurl}}" class="nhsuk-card__link" tabindex="-1">
                <div class="course-category nhsuk-tag nhsuk-tag--blue">
                    {{$coursecategory}}{{/coursecategory}}
                </div>
                <span class="sr-only">{{fullname}}</span>
            </a>
        </p>

        {{^visible}}
            <span class="badge badge-info">{{#str}} hiddenfromstudents {{/str}}</span>
        {{/visible}}

        <div class="d-flex align-items-start">
            {{> block_myoverview/progress-bar}}
        </div>

        <div class="col-md-1 p-1 mr-2 d-flex menu">
            {{> block_myoverview/course-action-menu }}
        </div>

    </div>
</div>
