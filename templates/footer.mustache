{{!
    @template theme_nhse/footer

    Page fooer template

    Example context (json):
    {
    }
}}
<footer role="contentinfo">
    <div class="nhsuk-footer" id="nhsuk-footer">
        <div class="nhsuk-width-container">
            <div class="nhsuk-grid-row">
                <div class="nhsuk-grid-column-one-third">
                    <div class="footer-nav">
                        <h5>{{footerbtitle1}}</h5>
                        {{{output.home_link}}}
                        {{{output.login_info}}}
                        {{{footerblink}}}
                    </div>

                    <div class="tool_usertours-resettourcontainer"></div>
                </div>
                <div class="nhsuk-grid-column-one-third">
                    <div class="footer-nav">
                        <h5>{{footerbtitle2}}</h5>
                        {{{footerblink2}}}
                    </div>
                </div>
                <div class="nhsuk-grid-column-one-third">
                    <div class="footer-nav">
                        <h5>{{footerbtitle3}}</h5>
                        {{{footerblink3}}}
                        {{#output.page_doc_link}}
                            <p class="helplink">{{{output.page_doc_link}}}</p>
                        {{/output.page_doc_link}}
                        {{{ output.standard_footer_html}}}
                        {{{ output.standard_end_of_body_html }}}
                    </div>
                </div>

                <div id="course-footer" class="nhsuk-grid-column-full">{{{output.course_footer}}}</div>

                <div class="nhsuk-grid-column-full">
                    <p class="nhsuk-footer__copyright">{{copyright}}</p>
                </div>

            </div>

            <div class="nhsuk-grid-row">
                <div class="nhsuk-grid-column-full">
                    {{{ output.debug_footer_html }}}
                </div>
            </div>

        </div>
    </div>
</footer>
{{#js}}
require(['theme_boost/footer-popover'], function(FooterPopover) {
    FooterPopover.init();
});
{{/js}}
